<h1> Create a new Figure</h1>

<form action="/figures" method="post">
  <label for="figure_name">Name</label>
  <input type="text" id="figure_name" name="figure[name]">
  <br>
  <h3>Titles</h3>
  <%@titles.each do |title|%>
    <label for="title_name"><%=title.name%></label>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]">
    <br>

  <%end%>
  <label>Create New Title:</label>
    <input type="text" id="new_title" name="title[name]">

  <h3>Landmarks</h3>
  <%@landmarks.each do |landmark|%>
    <label for="landmark_name"><%=landmark.name%></label>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_id][]" value="<%= landmark.id %>">
    <br>
  <%end%>
  <label>Create New Landmark:</label>
    <input type="text" id="new_landmark_name" name="landmark[name]">
    <input type="number" id="new_landmark_year_completed" name="landmark[year_completed]">
    <input type="submit" value="Create New Figure">
</form>
